<% provide(:title, 'ランキング') %>
<h1>ランキング</h1>

<table border="1">
<%# ランク表示 %>
  <tr>
    <td>順位</td>
    <td>name</td>
    <td>最高正解率</td>
  </tr>

  <div class="user"></div>
  <% @ranking.each.with_index(1) do |rank, i| %>
    <%  @class = "user" if session[:user_id] == rank.id %>
    <tr class=<%=@class.to_s%>>
      <td><%= "第 #{i} 位" %></td>
      <td><%= rank.name %></td>
      <td><%= "#{rank.highest_rate}%"  %></td>
    </tr>
    <% @class = "" %>
  <% end %>
</table>

<p><%= link_to "単語の編集をしてみる", index_path %></p>
<p><%= link_to "Homeへ戻る", show_path %></p>


